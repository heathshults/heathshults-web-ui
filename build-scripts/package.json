{
  "title": "HeathenScripts",
  "name": "npm-scripts",
  "version": "1.0.0",

  "scripts": {
    "go": "npm-run-all --sequential eslint js comp:buildlight gulp:ejsit scss:compile assets:copy comp:copy serve:proxy",
    "go:debug": "npm run build && node build-scripts/start-debug.js",
    "comp:clean": "node build-scripts/clean-components.js",
    "comp:copy": "node build-scripts/copy-comps.js",
    "comp:build:nowatch": "node_modules/.bin/stencil build --dev --docs-readme --debug",
    "comp:build:watch": " node_modules/.bin/stencil build --dev --docs-readme --debug --watch",
    "comp:buildlight": "npm-run-all --sequential comp:build:nowatch comp:copy",
    "comp:build": "npm run comp:clean && node_modules/.bin/stencil build --docs-readme --watch",
    "comp:serve": "node_modules/.bin/stencil build --dev --watch --serve",
    "comp:test": "node_modules/.bin/stencil test --spec --e2e",
    "comp:test:watch": "node_modules/.bin/stencil test --spec --e2e --watchAll",
    "comp:generate": "node_modules/.bin/stencil generate",
    "build:all": "npm-run-all --sequential comp:build:nowatch comp:copy html:components:copy js:transpile gulp:ejsit stylelint scss:compile autoprefixero assets:copy",
    "prebuild": "sh build_prebuild.sh",
    "build": "sh build.sh",
    "postbuild": "sh build_postbuild.sh",
    "assets:copy": "node ./build-scripts/build-assets.js && npm run gulp:copy:js",
    "ejs:build": "node build-scripts/build-ejs.js",
    "eslint": "eslint --fix src/js/HeathScript.js src/js/vendor/jqBootstrapValidation.js src/js/contact_me.js src/js/modules/show-more-fadebar/show-more.js",
    "js:transpile": "npm-run-all --sequential eslint js",
    "js": "node_modules/.bin/babel src/js/modules --out-dir src/js/temp/ && node_modules/.bin/babel src/js/modules/ --out-file src/js/temp/HeathScript-all-concat.js && node_modules/.bin/browserify src/index.js -o www/assets/js/HeathScript.bundle.js",
    "gulp:babelfry": "gulp babelfry",
    "typeScript": "tsc -d ./src/js/modules",
    "stylelint": " stylelint --fix src/scss/**/*.scss",
    "scss:compile": "node build-scripts/build-scss.js",
    "autoprefixer": "npx postcss www/assets/css/*.css --use autoprefixer -d www/assets/css/",
    "html:components:build": "gulp build_components",
    "html:components:copy": "gulp copy_components",
    "gulp:copy:js": "gulp copy_js",
    "serve": "gulp serve",
    "serve:php": "php -S localhost:8000 -t www/",
    "serve:proxy": "gulp connect_sync",
    "watch": "node build-scripts/watch.js",
    "gwatch": "gulp watchers",
    "gulp:ejsit": "gulp ejsit",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "scss:vars:convert": "node src/js/modules/scss2cssVars/index.js",
    "cssvars": "node_modules/.bin/babel-node src/js/modules/scss2cssVars/index.js",
    "cssvars:cli": "src/js/modules/scss2cssVars/bin/scss2cssVars src/scss/variables/_colors.scss -o src/scss/variables/_css-vars-heathshults.scss",
    "debug:scss": "sass src/scss/styles.scss www/assets/css/HeathStyle.built.css"
  }
  
}
