            /* end animated checkbox */

            /* animated arrows */
            @keyframes arrow-anim {
              from {
                fill: transparent;
                stroke-width: 2px;
                stroke: transparent;
                transform: translateX(1rem);
              }

              50% {
                fill: #FFF;
                stroke-width: 2px;
                stroke: #FFF;
              }

              to {
                transform: translateX(9rem);
                fill: transparent;
                stroke-width: 2px;
                stroke: transparent;
              }
            }

            @keyframes arrow-fixed-anim {
