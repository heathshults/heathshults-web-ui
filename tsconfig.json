{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "www/components",
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "target": "es2017"
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.jsx",
    "types/jsx.d.ts",
    "types/**/*.ts",
    "dist/types/components.d.ts",
    "src/components/declarations/highlight-code-anchor.d.tsx"  
  ],
  "exclude": [
    "backup",
    "build",
    "build-scripts",
    "config",
    "dist",
    "loader",
    "node_modules", 
    "src/assets",
    "src/env",
    "src/js/**/*",
    "src/global",
    "src/layouts",
    "src/mail",
    "src/php",
    "src/scss",
    "src/test",
    "src/views",
    "loader",
    "www",
    "wwww",
    
    "gulpfile.babel.js",
    "babel.config.js", 
    "jest.config.js",
    "**/*.spec.tsx",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "**/__tests__/**"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "rules": {
    "@typescript-eslint/no-unused-vars" : "off",
    "@typescript-eslint/explicit-module-boundary-types": "off"
  }
}
