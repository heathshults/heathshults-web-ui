{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": [
      "es6", 
      "es2016.array.include", 
      "es2017.object", 
      "DOM"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "types/jsx.d.ts",
    "types/**/*.ts",
    "dist/types/components.d.ts"
  ],
  "exclude": [
    "backup",
    "build",
    "build-scripts",
    "config",
    "dist",
    "loader",
    "node_modules", 
    "build-scripts",
    "src/assets",
    "src/env",
    "src/layouts",
    "src/mail",
    "src/php",
    "src/scss",
    "src/test",
    "src/types",
    "src/views",
    "www",
    "wwww-app",
    "src/js/modules/decorators",
    
    "gulpfile.babel.js",
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js" 
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars" : "off",
    "@typescript-eslint/explicit-module-boundary-types": "off"
  },
  "files": [
    "src/js/modules/hs-3d-rotate/index.ts",
    "src/js/modules/even-height/index.ts"
  ]
}
